<div class="jumbotron container mt-3">
{{#if sessionName}}
    <div class="jumbotron container mt-3 alert alert-success d-flex justify-content-between">
        <div>
            <h3>Bienvenido {{sessionName}}</h3>
            <h3>Has visitado la pagina {{sessionCounter}} veces!</h3>
        </div>
        <form action="/desloguear" method="get">
            <input type="submit" class="btn btn-warning" value="Desloguear">
        </form>
    </div>
{{/if}}
{{#unless sessionName}}
    <form action="/" method="POST">
        <h3>Ingrese su nombre:</h3>
        <input type="text" name="name" class="form-control">
        <input type="submit" value=" Ingresar " class="btn btn-success">
    </form>
{{/unless}}
</div>